<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.infiniteautomation.mango</groupId>
        <artifactId>mango-parent</artifactId>
        <version>4.5.2-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>modules-parent</artifactId>
    <packaging>pom</packaging>
    <name>Mango Modules</name>
    <properties>
        <moduleName>${project.name}</moduleName>
        <descriptionKey>${moduleName}.description</descriptionKey>
        <zipAssemblyName>${moduleName}-${noSnapshotVer}</zipAssemblyName>
        <webDirectory>${project.build.directory}/web</webDirectory>
        <moduleTagDirectory>${webDirectory}/WEB-INF/tags/${moduleName}</moduleTagDirectory>
        <moduleWebDirectory>${webDirectory}/modules/${moduleName}/web</moduleWebDirectory>
        <webpack.mode>production</webpack.mode>
        <installNodeAndNpmPhase>generate-resources</installNodeAndNpmPhase>
        <npmVersionPhase>generate-resources</npmVersionPhase>
        <npmInstallPhase>generate-resources</npmInstallPhase>
        <webpackPhase>generate-resources</webpackPhase>
        <copyModuleZipPhase>none</copyModuleZipPhase>
        <npmRunPhase>none</npmRunPhase>
    </properties>
    <profiles>
        <profile>
            <id>install-module</id>
            <properties>
                <copyModuleZipPhase>install</copyModuleZipPhase>
            </properties>
        </profile>
        <profile>
            <id>npm-set-version</id>
            <properties>
                <npmInstallPhase>none</npmInstallPhase>
                <webpackPhase>none</webpackPhase>
            </properties>
        </profile>
        <profile>
            <id>compile-only</id>
            <properties>
                <installNodeAndNpmPhase>none</installNodeAndNpmPhase>
                <npmVersionPhase>none</npmVersionPhase>
                <npmInstallPhase>none</npmInstallPhase>
                <webpackPhase>none</webpackPhase>
                <copyModuleZipPhase>none</copyModuleZipPhase>
            </properties>
        </profile>
        <profile>
            <id>npm-run</id>
            <properties>
                <npmVersionPhase>none</npmVersionPhase>
                <npmInstallPhase>none</npmInstallPhase>
                <webpackPhase>none</webpackPhase>
                <npmRunPhase>generate-resources</npmRunPhase>
            </properties>
        </profile>
        <profile>
            <id>store-upload</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.infiniteautomation</groupId>
                        <artifactId>mango-store-maven-plugin</artifactId>
                        <version>${mango.store.plugin.version}</version>
                        <executions>
                            <execution>
                                <id>mango-store-upload</id>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>webpack-development</id>
            <properties>
                <webpack.mode>development</webpack.mode>
            </properties>
        </profile>
    </profiles>
    <build>
        <resources>
            <resource>
                <directory>resources</directory>
            </resource>
            <resource>
                <directory>${project.basedir}</directory>
                <includes>
                    <include>module.properties</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>resources-test</directory>
            </testResource>
        </testResources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>module-zip</id>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                            <configuration>
                                <descriptorRefs>
                                    <descriptorRef>module-zip</descriptorRef>
                                </descriptorRefs>
                                <finalName>${zipAssemblyName}</finalName>
                                <appendAssemblyId>false</appendAssemblyId>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>copy-module</id>
                            <phase>${copyModuleZipPhase}</phase>
                            <goals>
                                <goal>copy</goal>
                            </goals>
                            <configuration>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>${project.groupId}</groupId>
                                        <artifactId>${project.artifactId}</artifactId>
                                        <version>${project.version}</version>
                                        <type>zip</type>
                                    </artifactItem>
                                </artifactItems>
                                <outputDirectory>${MA_HOME}/web/modules/</outputDirectory>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <!-- Used to output .sql files from Mango core so they can be used by mango-jooq-maven-plugin -->
                    <!-- See https://maven.apache.org/plugins/maven-remote-resources-plugin/examples/sharing-resources.html -->
                    <artifactId>maven-remote-resources-plugin</artifactId>
                    <configuration>
                        <resourceBundles>
                            <resourceBundle>com.infiniteautomation:mango:${mangoVersion}</resourceBundle>
                        </resourceBundles>
                        <attachToMain>false</attachToMain>
                        <attachToTest>false</attachToTest>
                    </configuration>
                    <executions>
                        <execution>
                            <!-- default phase is generate-resources, but we need to run this before mango-jooq-maven-plugin -->
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>process</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>com.infiniteautomation</groupId>
                    <artifactId>mango-jooq-maven-plugin</artifactId>
                    <configuration>
                        <scriptImports>
                            <scriptImport>
                                <generateTables>false</generateTables>
                                <fileSet>
                                    <directory>${project.build.directory}/maven-shared-archive-resources</directory>
                                    <includes>
                                        <include>**/createTables-H2.sql</include>
                                    </includes>
                                </fileSet>
                            </scriptImport>
                            <scriptImport>
                                <generateTables>true</generateTables>
                                <fileSet>
                                    <directory>resources</directory>
                                    <includes>
                                        <include>**/createTables-H2.sql</include>
                                    </includes>
                                </fileSet>
                            </scriptImport>
                        </scriptImports>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>com.github.eirslett</groupId>
                    <artifactId>frontend-maven-plugin</artifactId>
                    <version>1.13.4</version>
                    <executions>
                        <execution>
                            <phase>${installNodeAndNpmPhase}</phase>
                            <id>Install node</id>
                            <goals>
                                <goal>install-node-and-npm</goal>
                            </goals>
                            <configuration>
                                <nodeVersion>v18.16.0</nodeVersion>
                                <npmVersion>9.5.0</npmVersion>
                            </configuration>
                        </execution>
                        <execution>
                            <phase>${npmVersionPhase}</phase>
                            <id>Run npm version</id>
                            <goals>
                                <goal>npm</goal>
                            </goals>
                            <configuration>
                                <arguments>version --no-git-tag-version --allow-same-version ${project.version}  </arguments>
                            </configuration>
                        </execution>
                        <execution>
                            <phase>${npmInstallPhase}</phase>
                            <id>Run npm install</id>
                            <goals>
                                <goal>npm</goal>
                            </goals>

                        </execution>
                        <execution>
                            <phase>${webpackPhase}</phase>
                            <id>Run vite</id>
                            <goals>
                                <goal>npm</goal>
                            </goals>
                            <configuration>
                                <arguments>run build</arguments>
                            </configuration>
                        </execution>
                        <execution>
                            <phase>${npmRunPhase}</phase>
                            <id>Run generic npm command</id>
                            <goals>
                                <goal>npm</goal>
                            </goals>
                            <configuration>
                                <arguments>${npmRunArgs}</arguments>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>            </plugins>
        </pluginManagement>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.infiniteautomation</groupId>
            <artifactId>mango</artifactId>
            <version>4.5.2-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <artifactId>mango</artifactId>
            <groupId>com.infiniteautomation</groupId>
            <version>4.5.2-SNAPSHOT</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junitVersion}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <version>${springVersion}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
